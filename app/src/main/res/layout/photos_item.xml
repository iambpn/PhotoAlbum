<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_photos_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_photos_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="false"
        style="@style/Widget.MaterialComponents.CardView"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_photo_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/alt_text"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/image_view_border"/>

        <ImageView
            android:id="@+id/iv_select_checkbox"
            android:src="@drawable/ic_baseline_check_box_24"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/alt_text"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:visibility="gone"
            app:tint="@color/primary"
            />
    </androidx.cardview.widget.CardView>
</LinearLayout>